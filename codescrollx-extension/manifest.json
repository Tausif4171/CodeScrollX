{
  "manifest_version": 3,
  "name": "CodeScrollX",
  "version": "1.0",
  "description": "Scroll X timeline based on coding activity",
  "permissions": ["scripting"],
  "host_permissions": ["https://x.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}
